                    <li>@Html.ActionLink("Lessons", "GetChapters", "Chapter", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Profile", "GetUserInfo", "ClientProfile", new { email = User.Identity.Name }, null)</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    }
                    @*<li><a href="contact.html" class="active">Contact</a></li>*@
                </ul>
            </div>

        </div>
    </div>



